%tr
  %td
    = option_type.name
  %td
    = option_type.presentation
  %td
    = link_to edit_admin_option_type_path(option_type), class: 'btn btn-primary btn-sm' do
      %span.glyphicon.glyphicon-edit

    = link_to admin_option_type_path(option_type), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm' do
      %span.glyphicon.glyphicon-remove

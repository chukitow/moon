%tr
  %td
    = variant.options_text
  %td
    = variant.price
  %td
    = link_to edit_admin_product_variant_path(@product, variant), class: 'btn btn-primary btn-sm' do
      %span.glyphicon.glyphicon-edit

    = link_to admin_product_variant_path(@product, variant), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm' do
      %span.glyphicon.glyphicon-remove

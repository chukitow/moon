.container
  - @products.in_groups_of(4, false).each do |row|
    .row
      - row.each do |product|
        .col-md-3
          .panel.panel-default.text-center
            .panel-body
              = link_to product_path(product) do
                = image_tag(product.images.first.attachment_file_name.url, class: 'img-responsive')
                = product.name
            .panel-footer
              = product.price_formated
